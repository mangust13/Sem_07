@model Lab_03.Models.EncryptViewModel

<h2>RC5 Encryption Tool</h2>

<form asp-action="Process" method="post" enctype="multipart/form-data">
    <label>Password:</label><br />
    <input type="password" name="Password" required /><br /><br />

    <label>File:</label><br />
    <input type="file" name="File" required /><br /><br />

    <label>Mode:</label><br />
    <select name="Mode">
        <option value="encrypt">Encrypt</option>
        <option value="decrypt">Decrypt</option>
    </select><br /><br />

    <button type="submit">Run</button>
</form>

@if (ViewBag.Error != null)
{
    <p style="color:red; font-weight:bold;">@ViewBag.Error</p>
}
@if (ViewBag.Message != null)
{
    <p style="color:green; font-weight:bold;">@ViewBag.Message</p>
}
